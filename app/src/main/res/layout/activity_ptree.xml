<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/custom_layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_1"
        android:background="@drawable/et_background"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ly_l1"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="match_parent">



        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_room_black_24dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:alpha="0.7"
            android:layout_width="52dp"
            android:layout_height="52dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Konum doğrulaması"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:text="Ağaç ekim alanlarından birisinde olmalısınız"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>




        <ImageView
            android:id="@+id/iv_l1"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/greenmark"
            android:layout_width="36dp"
            android:layout_marginEnd="15dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:background="@drawable/et_background"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ly_l2"
            android:background="@color/red"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="match_parent">


        </LinearLayout>

        <ImageView
            android:src="@drawable/qrcode"
            android:layout_weight="1"
            android:padding="5dp"
            android:alpha="0.7"
            android:layout_width="52dp"
            android:layout_height="52dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Fidan doğrulaması"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:text="Fidanın üzerindeki QR kodu taratmalısınız"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>





        <ImageView
            android:id="@+id/iv_l2"

            android:layout_weight="2"
            android:src="@drawable/redcross"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"

            android:layout_width="36dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3"

        android:background="@drawable/et_background"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ly_l3"

            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@color/red">


        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:alpha="0.7"
            android:layout_width="52dp"
            android:layout_height="52dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fotoğraf doğrulaması"
                android:textSize="16dp" />

            <TextView
                android:layout_weight="1"
                android:text="Diktiğiniz fidanın fotoğrafını çekmelisiniz"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>





        <ImageView
            android:id="@+id/iv_l3"

            android:layout_weight="2"
            android:src="@drawable/redcross"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </LinearLayout>




</LinearLayout>